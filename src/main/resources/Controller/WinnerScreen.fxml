<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MenuController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" opacity="0.5" pickOnBounds="true">
         <image>
            <Image url="@../Images/Title.jpg" />
         </image>
      </ImageView>
      <Label layoutX="165.0" layoutY="31.0" text="You won!" textFill="#170568">
         <font>
            <Font name="System Bold" size="68.0" />
         </font>
      </Label>
      <Label layoutX="100.0" layoutY="141.0" text="Congratulations! Your time was: ">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
      </Label>
      <Label fx:id="gameTimeNeeded" layoutX="240.0" layoutY="200.0" text="06:09">
         <font>
            <Font name="System Bold" size="47.0" />
         </font>
      </Label>
      <Button layoutX="152.0" layoutY="296.0" mnemonicParsing="false" onAction="#switchToSceneTitle" text="Back to Title Screen">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
      </Button>
   </children>
</AnchorPane>
